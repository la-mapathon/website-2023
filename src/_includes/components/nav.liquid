{% if page.lang == 'en' %}
  {% assign source = en_content %}
{% elsif page.lang == 'ja' %}
  {% assign source = ja_content %}
{% endif %}

<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <button
      class="navbar-toggler ms-auto"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#mainNav"
      aria-controls="mainNav"
      aria-expanded="false"
      aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="mainNav">
      <div class="navbar-nav ms-auto text-end">
        <a class="nav-link" href="{{ '/' | url: page.lang }}">{{ source.nav.navIndex }}</a>
        <a class="nav-link" href="{{ '/schedule/' | url: page.lang }}">{{ source.nav.navSchedule }}</a>
        <a class="nav-link" href="{{ '/resources/' | url: page.lang }}">{{ source.nav.navResources }}</a>
        <a class="nav-link" href="{{ '/team/' | url: page.lang }}">{{ source.nav.navTeam }}</a>
        <a class="nav-link" href="{{ '/about/' | url: page.lang }}">{{ source.nav.navAbout }}</a>
        <div class="dropdown">
          <a
            class="btn btn-secondary dropdown-toggle"
            href="#"
            role="button"
            data-bs-toggle="dropdown"
            aria-expanded="false">
            Language
          </a>

          <ul class="dropdown-menu">

            {% assign links = page.url | locale_links %}
            {%- for link in links %}
              <li>
                <a
                  class="dropdown-item"
                  href="{{ link.url }}"
                  lang="{{ link.lang }}"
                  hreflang="{{ link.lang }}">{{ link.label }}</a>
              </li>
            {%- endfor -%}
          </ul>
        </div>
      </div>
    </div>
  </div>
</nav>