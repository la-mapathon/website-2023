---
layout: default
---

{% if page.lang == 'en' %}
  {% assign source = en_content %}
{% elsif page.lang == 'ja' %}
  {% assign source = ja_content %}
{% endif %}

<div class="container">
  <h1 class="display-5 my-5 fw-bold center-text">{{ source.team.pageHeader }}</h1>
  <div class="row">
    <div class="col d-flex flex-wrap  justify-content-center">
      {% for member in team.members %}
        <div class="card text-center mx-2 my-2" style="width: 18rem;">
          <div class="card-body d-flex flex-column justify-content-between">
            <h2 class="card-title"><img src="{{  '/images/' | append: member.affiliation | append: '.png' | url}}" width="30"> {{ member.name }}</h2>
            <p class="card-text">{{ member.blurb }}</p>
            <img src="{{ member.image | url }}" width="250">
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>