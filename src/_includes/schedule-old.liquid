---
layout: default
---

{% if page.lang == 'en' %}
  {% assign source = en_content %}
{% elsif page.lang == 'ja' %}
  {% assign source = ja_content %}
{% endif %}

<div class="container">
  <h1 class="display-3 my-5 text-center">{{ source.schedule.pageHeader }}
  </h1>
  <div class="my-2 text-center">
    <div class="jumbotron jumbotron-fluid">
      <div class="container">
        <img
          src="{{ '/images/donuts.png' | url }}"
          class="img-fluid"
          alt="a screenshot of the OpenStreetMap editing screen with a donut emoji and a coffee emoji.">
        <br>
      </div>
    </div>
  </div>

  <div class="my-5">
    <strong>View for:</strong>
    <div class="dropdown">
      <a
        class="btn btn-outline-secondary dropdown-toggle"
        href="#"
        role="button"
        data-bs-toggle="dropdown"
        aria-expanded="false">
        Language
      </a>

      <ul class="dropdown-menu dropdown-menu-start text-start">

        {% assign links = page.url | locale_links %}
        {%- for link in links %}
          <li>
            <a
              class="dropdown-item"
              href="{{ link.url }}"
              lang="{{ link.lang }}"
              hreflang="{{ link.lang }}">{{ link.label }}</a>
          </li>
        {%- endfor -%}
      </ul>
    </div>
  </div>

  <h2 class="display-5">{{ source.schedule.day1 }}</h2>
  <h3>{{ source.schedule.date1 }}</h3>
  <div class="row mt-4">
    <div class="col-2 text-end">
      {{ source.schedule.day1EventTime1 }}
    </div>
    <div class="col">
      {{ source.schedule.day1EventDescription1 }}
    </div>
  </div>
  <div class="row mt-4">
